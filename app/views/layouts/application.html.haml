!!! 5
%html(lang="en-US")
  %head
    %title TIL / Hashrocket
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    %main
      %header
        #flash
          - if flash.present?
            - if flash[:alert]
              - [flash[:alert]].flatten.each do |alert_message|
                %p.error= alert_message
            - elsif flash[:notice]
              - [flash[:notice]].flatten.each do |notice|
                %p.notice= notice
            %br
        = link_to root_path do
          %h1 TIL / Hashrocket
        %ul
          - if developer_signed_in?
            %li= link_to current_developer.username, developers_show_path(current_developer.username)
            %li= link_to "Sign Out", account_signout_path
            %li= link_to "Create Post", new_post_path
          - else
            %li= link_to "Rocketeer Sign In", google_oauth2_path
      %section.content
        = yield

