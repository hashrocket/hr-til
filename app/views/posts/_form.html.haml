= form_for @post do |f|
  %dl
    %dt
      = f.label :title
      = f.error_message_on :title
    %dd= f.text_field :title, placeholder: 'Enter title...'
    %dt
      = f.label :body
      = f.error_message_on :body
    %dd= f.text_area :body, placeholder: 'Enter body...', class: 'autosize'
    %dt
      = f.label :channel_id
      = f.error_message_on :channel_id
    %dd= f.collection_select :channel_id, sorted_channels, :id, :name, include_blank: ""
    - if @post.publishable?
      %dt
        = f.check_box :published
        = f.label :published, 'Publish?'
  %fieldset.actions
    = f.submit 'Submit'
    = link_to 'cancel', root_path
